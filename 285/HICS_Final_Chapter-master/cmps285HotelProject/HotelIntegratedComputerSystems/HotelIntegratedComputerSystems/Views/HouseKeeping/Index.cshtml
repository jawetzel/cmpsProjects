@model IEnumerable<HotelIntegratedComputerSystems.Models.MaidService.HouseKeepingViewModel>
@Scripts.Render("~/Scripts/OneFilterPerColumn.js")

@{
    ViewBag.Title = "Index";
}


<h2></h2>



<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">HouseKeeping</h3>
    </div>
    <table class="table table-hover table-bordered" id="dev-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BuildingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FloorNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomBedding)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HousekeepingCleanStatus)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.RoomStatusDescription)
                </th>
                <th>
                    Change Status
                </th>

            </tr>
            <tr>
                <th>
                    <input type="text" id="myInput1" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Building" />
                </th>
                <th>
                    <input type="text" id="myInput2" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Floor" />
                </th>
                <th>
                    <input type="text" id="myInput3" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Room" />
                </th>
                <th>
                    <input type="text" id="myInput4" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Bedding Type" />
                </th>
                <th>
                    <input type="text" id="myInput5" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Clean Status" />
                </th>
                <th>
                    <input type="text" id="myInput6" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Room Status" />
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuildingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FloorNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomBedding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HousekeepingCleanStatus)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.RoomStatusDescription)
                    </td>
                    <td>
                        @Html.ActionLink("Clean", "Clean", new { id = item.Id }) |
                        @Html.ActionLink("Dirty", "Dirty", new { id = item.Id }) |
                        @Html.ActionLink("DND", "Dnd", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>  
</div>
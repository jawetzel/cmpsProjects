@model HotelIntegratedComputerSystems.Models.Admin.MaintenanceLog.PackageMaintenanceLogViewModel
@Scripts.Render("~/Scripts/OneFilterPerColumn.js")
@{
    ViewBag.Title = "Index";
}

<h2></h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Maintenance Log</h3>
    </div>
    <table class="table table-hover table-bordered" id="dev-table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog.MaintenanceType)
            </th>
            <th>
                @Html.ActionLink("Create New", "Create")
            </th>
        </tr>
            <tr>
                <th>
                    <input type="text" id="myInput1" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Building" />
                </th>
                <th>
                    <input type="text" id="myInput2" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Floor" />
                </th>
                <th>
                    <input type="text" id="myInput3" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Room" />
                </th>
                <th>
                    <input type="text" id="myInput4" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Description" />
                </th>
                <th>
                    <input type="text" id="myInput5" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Date" />
                </th>
                <th>
                    <input type="text" id="myInput6" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Maintenance Type" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.MaintenanceLogsList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Floor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintenanceType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
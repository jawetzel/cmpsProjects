@model IEnumerable<HotelIntegratedComputerSystems.Models.Admin.RoomTypeViewModel>
@Scripts.Render("~/Scripts/OneFilterPerColumn.js")
@{
    ViewBag.Title = "Index";
}

<h2></h2>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Room Type</h3>
    </div>
    <table class="table table-hover table-bordered" id="dev-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Bedding)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kitchen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BathRooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SleepsVolume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NightlyRate)
                </th>
                <th>
                    @Html.ActionLink("Create New", "Create")
                </th>
            </tr>
            <tr>
                <th>
                    <input type="text" id="myInput1" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Bedding" />
                </th>
                <th>
                    <input type="text" id="myInput2" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Kitchen" />
                </th>
                <th>
                    <input type="text" id="myInput3" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Rooms" />
                </th>
                <th>
                    <input type="text" id="myInput4" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Bathrooms" />
                </th>
                <th>
                    <input type="text" id="myInput5" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Occupants" />
                </th>
                <th>
                    <input type="text" id="myInput6" onkeyup="filterFunctionColumn6('dev-table', 'myInput1', 'myInput2', 'myInput3', 'myInput4', 'myInput5', 'myInput6')" class="form-control" data-action="filter" placeholder="Filter Rate" />
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bedding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kitchen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BathRooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SleepsVolume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NightlyRate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
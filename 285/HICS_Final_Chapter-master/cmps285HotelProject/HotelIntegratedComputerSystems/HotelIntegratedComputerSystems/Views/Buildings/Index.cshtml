@model IEnumerable<HotelIntegratedComputerSystems.Models.Admin.BuildingViewModel>
@Scripts.Render("~/Scripts/OneFilterPerColumn.js")
@{
    ViewBag.Title = "Index";
}

<h2></h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Buildings</h3>
    </div>
    <table class="table table-hover table-bordered" id="BuildingTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BuildingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.ActionLink("Create New", "Create")
                </th>
            </tr>
            <tr>
                <th>
                    <input type="text" id="myInput1" onkeyup="filterFunctionColumn3('BuildingTable', 'myInput1', 'myInput2', 'myInput3')" class="form-control" data-action="filter" placeholder="Filter Building" />
                </th>
                <th>
                    <input type="text" id="myInput2" onkeyup="filterFunctionColumn3('BuildingTable', 'myInput1', 'myInput2', 'myInput3')" class="form-control" data-action="filter" placeholder="Filter Phone Number" />
                </th>
                <th>
                    <input type="text" id="myInput3" onkeyup="filterFunctionColumn3('BuildingTable', 'myInput1', 'myInput2', 'myInput3')" class="form-control" data-action="filter" placeholder="Filter Address" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuildingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>